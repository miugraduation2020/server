            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->



                <div class="row">
                    <div class="col-md-12">
                        <div class="white-box">
                            <!-- Column -->
                            <div class="col-lg-8 col-xlg-9 col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <form class="form-horizontal form-material" id="add-user" name="adduser"
                                            method="POST" action='/add-user'>
                                            <div class="form-group mb-4">
                                                <label class="col-sm-12">Select Type</label>
                                                <div class="col-sm-12 border-bottom">
                                                    <select class="form-control p-0 border-0" name="type"
                                                        value="{{inputType}}" id='new-userrole' <%=user[i].type; %>
                                                        <option>Admin</option>
                                                        <option>Pathologist</option>
                                                        <option>Patient</option>

                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label class="col-md-12 p-0">First Name</label>
                                                <div class="col-md-12 border-bottom p-0">
                                                    <input required type="text" placeholder="Johnathan "
                                                        class="form-control p-0 border-0" name='firstName'
                                                        value="{{inputFName}}" id='full-name' <%=user[i].firstName; %>
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label class="col-md-12 p-0">Last Name</label>
                                                <div class="col-md-12 border-bottom p-0">
                                                    <input type="text" placeholder="doe "
                                                        class="form-control p-0 border-0" name='lastName' id='last-name'
                                                        value="{{inputLName}}" <%=user[i].lastName; %>
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label for="example-email" class="col-md-12 p-0">Email</label>
                                                <div class="col-md-12 border-bottom p-0">
                                                    <span style="color: red;">{{errors.email}}</span>
                                                    <input type="email" placeholder="johnathan@admin.com"
                                                        value="{{inputEmail}}" class="form-control p-0 border-0"
                                                        name="email" id="new-email" <%=user[i].email; %>
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label class="col-md-12 p-0">Password</label>
                                                <div class="col-md-12 border-bottom p-0">
                                                    <span style="color: red;">{{errors.password}}</span>
                                                    <input type="password" value="password" value="{{inputPassword}}"
                                                        class="form-control p-0 border-0" name='password'
                                                        id='new-password' <%=user[i].password; %>
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label class="col-md-12 p-0">Confirm Password</label>
                                                <div class="col-md-12 border-bottom p-0">
                                                    <span style="color: red;">{{errors.confPassword}}</span>
                                                    <input type="password" value="password"
                                                        value="{{inputConfPassword}}" class="form-control p-0 border-0"
                                                        id='confPassword' name="confPassword" <%=user[i].confPassword;
                                                        %>
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label class="col-md-12 p-0">Phone No</label>
                                                <div class="col-md-12 border-bottom p-0">
                                                    <input type="text" placeholder="123 456 7890" name="phoneNumber"
                                                        value="{{inputPhoneNumber}}" class="form-control p-0 border-0"
                                                        <%=user[i].phoneNumber; %>
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label class="col-md-12 p-0">Date of Birth</label>
                                                <div class="col-md-12 border-bottom p-0">
                                                    <input type="date" placeholder="06/15/1999" name="dateOfBirth"
                                                        value="{{inputDOB}}" class="form-control p-0 border-0"
                                                        <%=user[i].dateOfBirth; %>
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label class="col-md-12 p-0">Address</label>
                                                <div class="col-md-12 border-bottom p-0">
                                                    <textarea rows="3" name="address" class="form-control p-0 border-0"
                                                        value="{{inputAddress}}" <%=user[i].address; %></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label class="col-sm-12"> Gender</label>
                                                <div class="col-sm-12 border-bottom">
                                                    <select class="form-control p-0 border-0" name="gender"
                                                        value="{{inputGender}}" <%=user[i].gender; %>
                                                        <option>Female</option>
                                                        <option>Male</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group mb-4">
                                                <div class="col-sm-12">
                                                    <button type="submit" id='subnewuser' class="btn btn-success">Add
                                                        User</button>
                                                    <!-- <input type="submit" type="button" class="btn btn-success" id="submitUser" onclick="addUser"/> -->
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Column -->
                        </div>
                    </div>
                </div>
